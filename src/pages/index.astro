---
import Layout from '@layouts/Layout.astro';
import links from '@content/links.json';
import Link from '@components/Link.astro';

const mainLinks = links.mainLinks;
---

<style>
  ul {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2rem;

    width: 100%;
    max-width: 10rem;

    list-style-type: none;
    padding: 0;
  }

  li {
    width: 100%;
  }
</style>

<Layout title='Voidtrick'>
  <h1>Voidtrick</h1>
  <p>Hello, world.</p>
  <ul>
    {
      mainLinks.map((link) => (
        <li>
          <Link
            url={link.url}
            label={link.label}
            external={link.external}
            icon={link.icon}
          />
        </li>
      ))
    }
  </ul>
</Layout>
